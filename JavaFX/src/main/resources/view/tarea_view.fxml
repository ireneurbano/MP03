<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.TareaController" spacing="10" alignment="CENTER">

    <TextField fx:id="txtTarea" promptText="Nueva tarea"/>
    <HBox spacing="10">
        <Button fx:id="btnAgregar" text="Agregar" onAction="#agregarTarea"/>
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarTarea"/>
        <Button fx:id="btnCompletar" text="Completar" onAction="#completarTarea" />
    </HBox>
    <ListView fx:id="listaTareas" prefHeight="200"/>
</VBox>